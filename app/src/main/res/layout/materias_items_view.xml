<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="15dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:id="@+id/nombreunidadeducativa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="UNACH"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginRight="5sp"
            />

        <TextView
            android:id="@+id/materianombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Programacion"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/nombreunidadeducativa"/>


        <TextView
            android:id="@+id/salonclases"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="5 lugares"
            android:layout_marginLeft="25dp"

            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/materianombre"/>
    </RelativeLayout>




</androidx.cardview.widget.CardView>